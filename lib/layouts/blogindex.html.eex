<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title><%= @title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <%= @partials.addtail %>
  </head>
  <body>
  <div class="container mx-auto">
    <%= @partials.nav %>
    <h1>Blog</h1>
    <section class="my-10">
    <%= 
    %{posts: %{public: posts_in_yes}} = @collections
    for page <- posts_in_yes do 
        %>
        <div class="m-10">
      <a href="<%= page.data.url %>"><%= page.data.title %></a>
      <p><%= inspect(page.page.date) %></p>
            <p><%= inspect(page.page.description) %></p>
            <p><%= inspect(page.data.image) %></p>
    </div>
    <% end %>
    </section>
    <footer>
      &copy; <%= @author %>
    </footer>
    </div>
  </body>
</html>